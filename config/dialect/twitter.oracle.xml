<?xml version="1.0" encoding="utf-8"?>
<dialect xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" type="ORACLE" xsi:noNamespaceSchemaLocation="dialect.xsd">
    <procedures>
        <procedure procedureClass="com.oltpbenchmark.benchmarks.twitter.procedures.GetTweet">
            <statements>
                <statement name="getTweet">
                    SELECT * FROM "tweets" WHERE id = ?
                </statement>
            </statements>
        </procedure>
        <procedure procedureClass="com.oltpbenchmark.benchmarks.twitter.procedures.GetTweetsFromFollowing">
            <statements>
                <statement name="getFollowing">
                    SELECT f2 FROM "follows" WHERE f1 = ? AND ROWNUM &lt;= 20
                </statement>
                <statement name="getTweets">
                    SELECT * FROM "tweets" WHERE uuid IN (??)
                </statement>
            </statements>
        </procedure>
        <procedure procedureClass="com.oltpbenchmark.benchmarks.twitter.procedures.GetFollowers">
            <statements>
                <statement name="getFollowers">
                    SELECT f2 FROM "followers" WHERE f1 = ? AND ROWNUM &lt;= 20
                </statement>
                <statement name="getFollowerNames">
                    SELECT uuid, name FROM "user_profiles" WHERE uuid IN (??)
                </statement>
            </statements>
        </procedure>
        <procedure procedureClass="com.oltpbenchmark.benchmarks.twitter.procedures.GetUserTweets">
            <statements>
                <statement name="getTweets">
                    SELECT * FROM "tweets" WHERE uuid = ? AND ROWNUM &lt;= 10
                </statement>
            </statements>
        </procedure>
        <procedure procedureClass="com.oltpbenchmark.benchmarks.twitter.procedures.InsertTweet">
            <statements>
                <statement name="insertTweet">
                    INSERT INTO "added_tweets" VALUES (tweet_idseq.nextval, ?, ?, ?)
                </statement>
            </statements>
        </procedure>
    </procedures>
</dialect>
