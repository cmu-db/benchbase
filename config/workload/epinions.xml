<?xml version="1.0" encoding="utf-8"?>
<configuration xsi:noNamespaceSchemaLocation="workload.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <workloads>
        <workload benchmarkClass="com.oltpbenchmark.benchmarks.epinions.EpinionsBenchmark">
            <scaleFactor>1</scaleFactor>
            <terminals>1</terminals>

            <phases>
                <phase>
                    <time>60</time>
                    <rateType>LIMITED</rateType>
                    <rate>10000</rate>
                    <weight>10,10,10,10,10,10,10,10,20</weight>
                </phase>
            </phases>

            <transactions>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.GetReviewItemById">
                    <name>GetReviewItemById</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.GetReviewsByUser">
                    <name>GetReviewsByUser</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.GetAverageRatingByTrustedUser">
                    <name>GetAverageRatingByTrustedUser</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.GetItemAverageRating">
                    <name>GetItemAverageRating</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.GetItemReviewsByTrustedUser">
                    <name>GetItemReviewsByTrustedUser</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.UpdateUserName">
                    <name>UpdateUserName</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.UpdateItemTitle">
                    <name>UpdateItemTitle</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.UpdateReviewRating">
                    <name>UpdateReviewRating</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.epinions.procedures.UpdateTrustRating">
                    <name>UpdateTrustRating</name>
                </transaction>
            </transactions>
        </workload>
    </workloads>

</configuration>
