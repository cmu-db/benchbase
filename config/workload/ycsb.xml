<?xml version="1.0" encoding="utf-8"?>
<configuration xsi:noNamespaceSchemaLocation="workload.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <workloads>
        <workload benchmarkClass="com.oltpbenchmark.benchmarks.ycsb.YCSBBenchmark">
            <scaleFactor>1</scaleFactor>
            <terminals>1</terminals>

            <phases>
                <phase>
                    <time>60</time>
                    <rateType>LIMITED</rateType>
                    <rate>10000</rate>
                    <weight>50,5,15,10,10,10</weight>
                </phase>
            </phases>

            <transactions>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.ReadRecord">
                    <name>ReadRecord</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.InsertRecord">
                    <name>InsertRecord</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.ScanRecord">
                    <name>ScanRecord</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.UpdateRecord">
                    <name>UpdateRecord</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.DeleteRecord">
                    <name>DeleteRecord</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.ycsb.procedures.ReadModifyWriteRecord">
                    <name>ReadModifyWriteRecord</name>
                </transaction>
            </transactions>
        </workload>
    </workloads>


</configuration>
