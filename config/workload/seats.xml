<?xml version="1.0" encoding="utf-8"?>
<configuration xsi:noNamespaceSchemaLocation="workload.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <workloads>
        <workload benchmarkClass="com.oltpbenchmark.benchmarks.seats.SEATSBenchmark">
            <scaleFactor>1</scaleFactor>
            <terminals>1</terminals>

            <phases>
                <phase>
                    <time>60</time>
                    <rateType>LIMITED</rateType>
                    <rate>10000</rate>
                    <weight>10, 10, 35, 20, 10, 15</weight>
                </phase>
            </phases>

            <transactions>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.DeleteReservation">
                    <name>DeleteReservation</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.FindFlights">
                    <name>FindFlights</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.FindOpenSeats">
                    <name>FindOpenSeats</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.NewReservation">
                    <name>NewReservation</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.UpdateCustomer">
                    <name>UpdateCustomer</name>
                </transaction>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.seats.procedures.UpdateReservation">
                    <name>UpdateReservation</name>
                </transaction>
            </transactions>
        </workload>
    </workloads>

</configuration>
