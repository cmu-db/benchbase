<?xml version="1.0" encoding="utf-8"?>
<configuration xsi:noNamespaceSchemaLocation="workload.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <workloads>
        <workload benchmarkClass="com.oltpbenchmark.benchmarks.smallbank.SmallBankBenchmark">
            <scaleFactor>1</scaleFactor>
            <terminals>1</terminals>

            <phases>
                <phase>
                    <time>60</time>
                    <rateType>LIMITED</rateType>
                    <rate>100</rate>
                    <weight>15,15,15,25,15,15</weight>
                </phase>
            </phases>

            <transactions>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.Amalgamate"/>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.Balance"/>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.DepositChecking"/>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.SendPayment"/>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.TransactSavings"/>
                <transaction procedureClass="com.oltpbenchmark.benchmarks.smallbank.procedures.WriteCheck"/>
            </transactions>
        </workload>
    </workloads>


</configuration>
